{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./",
        "allowJs": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "noImplicitAny": false,
        "listFiles": false,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "allowSyntheticDefaultImports": false,
    "files": [
        "index.ts"
    ],
    "include": [
        "config"
    ],
    "exclude": [
        "**/*d.ts"
    ],
    "compileOnSave": false
}